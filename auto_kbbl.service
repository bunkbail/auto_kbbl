[Unit]
Description=Automatic Keyboard Backlight Controller
After=multi-user.target

[Service]
# This service needs root privileges to read /dev/input/event*
# and to write to /sys/class/leds/
User=root
Type=simple
ExecStart=/usr/local/bin/auto_kbbl
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
